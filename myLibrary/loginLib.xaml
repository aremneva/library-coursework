<Window x:Class="myLibrary.loginLib"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:myLibrary"
        mc:Ignorable="d"
        Title="Library" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="375*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="back" Content="Back " Template="{StaticResource btTemplate}" HorizontalAlignment="Left" Margin="617,350,0,0" VerticalAlignment="Top" Width="103" Height="48" Foreground="White" BorderBrush="#FFEA6C6C" FontSize="20" Click="Back_Click" Grid.Column="1">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFC36666"/>
                    <GradientStop Color="#FF7A0D0D" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="285" Margin="2,39,0,0" ItemsSource="{Binding}" VerticalAlignment="Top" Width="687" Grid.Column="1"/>
        <Button x:Name="load" Content="Load" Template="{StaticResource btTemplate}" HorizontalAlignment="Left" Margin="277,350,0,0" VerticalAlignment="Top" Width="129" Height="48" Foreground="White" BorderBrush="#FFEA6C6C" FontSize="20" Click="Load_Click" Grid.Column="1">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFB2F0A2"/>
                    <GradientStop Color="#FF258816" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>

</Window>
